<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingHorizontal="64dp"
            android:paddingVertical="48dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📚 Temify 대여 시스템"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="80dp"
                android:textAlignment="center"
                android:contentDescription="Temify 대여 시스템 메인 화면" />

            <Button
                android:id="@+id/btnRent"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="🌺 대여하기"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:padding="20dp"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"
                android:contentDescription="보조배터리 대여 버튼" />

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="📦 반납하기"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:padding="20dp"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"
                android:contentDescription="보조배터리 반납 버튼" />

            <Button
                android:id="@+id/btnStock"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="📊 재고 확인"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:padding="20dp"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"
                android:contentDescription="재고 확인 버튼" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>
